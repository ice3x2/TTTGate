{
  "name": "double-tip-tunnel-server",
  "version": "1.0.0",
  "description": "",
  "main": "package.js",
  "bin": {
    "server": "build/src/server/app.js"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "targets": [
      "node-linux-arm64",
      "node-win-arm64"
    ],
    "outputPath": "dist/bin/"
  },
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "build": "tsc -b",
    "start": "node bin/src/sserver.js",
    "server": "tsnd --respawn  src/app.ts server -dev ",
    "client": "tsnd --respawn  src/app.ts client -dev "
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.test.(js|ts)"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.14.0",
    "@types/pidusage": "^2.0.2",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/lodash": "^4.14.197",
    "@types/node-forge": "^1.3.4",
    "@types/winston": "^2.4.4",
    "@types/yaml": "^1.9.7",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "lodash": "^4.17.21",
    "node-forge": "^1.3.1",
    "pidusage": "^3.0.2",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yaml": "^2.3.1"
  }
}
